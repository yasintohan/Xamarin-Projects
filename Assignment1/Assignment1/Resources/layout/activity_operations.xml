<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

     <TextView
        android:text="@string/header-operations"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:gravity="center"
        android:layout_margin="16dp"
       />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical"> 
        

            <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/websiteText"
        android:hint="@string/open_website"
        android:layout_margin="16dp"
       />

        <Button
        android:text="@string/open_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:id="@+id/websiteBtn"
        android:layout_margin="16dp"
           />


            <EditText
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialText"
        android:hint="@string/callNumber"
        android:layout_margin="16dp"
       />

        <Button
        android:text="@string/callPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:id="@+id/dialBtn"
        android:layout_margin="16dp"
           />
            


        <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendMailText"
        android:hint="@string/email_hint"
        android:layout_margin="16dp"
       />

        <Button
        android:text="@string/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:id="@+id/sendMailBtn"
        android:layout_margin="16dp"
           />



        <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationText"
        android:hint="@string/location"
        android:layout_margin="16dp"
       />

        <Button
        android:text="@string/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:id="@+id/locationBtn"
        android:layout_margin="16dp"
           />




        <EditText
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mNumberText"
        android:hint="@string/callNumber"
        android:layout_margin="16dp"
       />

        <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/messageText"
        android:hint="@string/message_hint"
        android:layout_margin="16dp" />
           

        <Button
        android:text="@string/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:id="@+id/messageBtn"
        android:layout_margin="16dp"
           />
            
        
        
        
        </LinearLayout>
    
    
    
    
    
    
    
    </ScrollView>


</LinearLayout>
